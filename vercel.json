{
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/main.py" },
    { "src": "/health", "dest": "backend/main.py" },
    { "src": "/query", "dest": "backend/main.py" },
    { "src": "/(.*\\.html)", "dest": "frontend/$1" },
    { "src": "/(.*\\.css)", "dest": "frontend/$1" },
    { "src": "/(.*\\.js)", "dest": "frontend/$1" },
    { "src": "/", "dest": "frontend/index.html" }
  ]
}